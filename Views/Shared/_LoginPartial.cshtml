@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    
        <a  class="dropdown-item" data-toggle="modal" data-target="#logoutModal" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
         <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
        Sair </a>
    
    
       
}
else
{
        
        <a class="dropdown-item"  asp-area="Identity" asp-page="/Account/Register">
        <i class="far fa-address-card fa-sm fa-fw mr-2 text-gray-400"></i>
        Registrar</a>
         
        
        <a class="dropdown-item"  asp-area="Identity" asp-page="/Account/Login">
         <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
        Entrar</a>
         
}
