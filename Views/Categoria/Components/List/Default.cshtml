@model IEnumerable<Cpr.Web.ViewsModels.CategoriaViewModel>
@{
    ViewData["Title"] = "Home Page";
}

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
         <!-- <h1 class="h3 mb-2 text-gray-800">Tables</h1> -->
        <!--  <p class="mb-4">DataTables is a third party plugin that is used to generate the demo table below. For more information about DataTables, please visit the <a target="_blank" href="https://datatables.net">official DataTables documentation</a>.</p> -->

          <!-- DataTales Example -->
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">Tabela Categoria</h6>              
            </div>            
            <div class="card-body">
                
              <div class="table-responsive">
                <table class="table table-hover table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr class="table-info">                      
                      <th>@Html.DisplayNameFor(model => model.Name)</th>
                      <th style="text-align: center; width:  8.33%">Editar</th> 
                      <th style="text-align: center; width:  8.33%">Excluir</th>                 
                    </tr>
                  </thead>
                  <tfoot>
                   
                    <tr class="table-info">
                      <th></th>
                      <th style="text-align: center; width:  8.33%">Editar</th> 
                      <th style="text-align: center; width:  8.33%">Excluir</th>                                            
                    </tr>
                  
                  </tfoot>
                  <tbody>
                  @foreach (var item in Model)
                  {
                    <tr>
                      <td>                          
                          @Html.DisplayFor(modelItem => item.Name) 
                      </td> 
                      <td style="text-align: center;">
                          <a href="#"  title="Editar" data-id="@item.Id" class="btn btn-primary edit" >
                            <i class="far fa-edit"></i></a>                         
                      </td>  
                      <td style="text-align: center;">
                          <a href="#" title="Excluir" data-id="@item.Id" class="btn btn-danger delete" >
                            <i class="fas fa-trash-alt"></i></a>                        
                      </td>                     
                    </tr>               
                  }                   
                  </tbody>
                </table>
              </div>
            </div>
          </div>
                 <div class="text-right ">  
                   <a href="#" class="btn btn-success create">
                   Nova categoria <i class="fas fa-upload"></i></a>    
                 </div>    
        </div>
        <!-- /.container-fluid -->

    <div id="modal" class="modal fade" data-backdrop="static"></div> 